            <a class="menu-link" aria-expanded="false">
                <div>JavaScript</div>
            </a>
            <ul class="menu-sub" style="display:none; list-style-type: none; padding-left: 0;">
                @if (Model != null && Model?.BlobsList?.Count > 0)
                {

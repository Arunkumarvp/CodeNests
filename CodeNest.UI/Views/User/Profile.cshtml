@model CodeNest.DTO.Models.UsersDto

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styling for Profile Page */
        body {
            background: linear-gradient(to right, #f8f9fa, #e0e7ff);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .profile-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            padding: 2rem;
            color: #333;
        }
        .profile-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .profile-header h2 {
            font-size: 1.8rem;
            font-weight: bold;
            color: #5a5a5a;
        }
        .profile-form .form-group {
            margin-bottom: 1rem;
        }
        .profile-form label {
            font-weight: bold;
            color: #555;
        }
        .profile-form input {
            background-color: #f4f6f9;
            border: 1px solid #ddd;
        }
        .btn-custom {
            background-color: #4e73df;
            border-color: #4e73df;
            color: #fff;
            transition: background-color 0.3s;
        }
        .btn-custom:hover {
            background-color: #2e59d9;
            border-color: #2653d4;
        }
    </style>
    <title>Profile Page</title>
</head>

<body>
    <div class="profile-card">
        <div class="profile-header">
            <h2>User Profile</h2>
        </div>

        <form method="post" class="profile-form">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Enter the Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Email:</label>
                <input asp-for="Email" class="form-control" placeholder="Enter the Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter the First Name" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter the Last Name" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Country">Country:</label>
                <input asp-for="Country" class="form-control" placeholder="Enter the Country" required />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="MobileNumber">Mobile Number:</label>
                <input asp-for="MobileNumber" class="form-control" placeholder="Enter the Mobile Number" required />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                @* <button type="submit" class="btn btn-custom">Save Changes</button> *@
                <a href="@Url.Action("JsonFormatter", "Formatter",new{userId=Model.Id})" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>

</body>
</html>
